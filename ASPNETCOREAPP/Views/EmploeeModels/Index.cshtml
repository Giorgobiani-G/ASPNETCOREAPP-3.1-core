    <p>
        <input type="text" name="SearchText">
        <input type="submit" value="Search" />
        <a asp-action="Index">Back To Full List</a>
    </p>
</form>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empid)
